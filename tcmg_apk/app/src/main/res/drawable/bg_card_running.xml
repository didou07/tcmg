<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0a1a10"/>
            <stroke android:width="1dp" android:color="#166534"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:bottom="-1dp" android:left="-1dp" android:right="-1dp"
          android:height="2dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:angle="0"
                android:startColor="#22c55e" android:endColor="#06b6d4"/>
        </shape>
    </item>
</layer-list>
